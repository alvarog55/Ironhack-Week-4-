<h1> Create a new product</h1>

<% if @user.errors.messages.present? %>
  <p><%= @user.errors.messages %></p>
<%end %>

<%= form_for [@user, @product] do |f| %>
	<div>
    	<%= f.label :name %>
   	 	<%= f.text_field :name %>
	</div>
  <br>
	<div>
    	<%= f.label :description %>
  		<%= f.text_area :description %>
  	</div>
    <br>
    <div>
      <%= f.label :deadline %>
      <%= f.date_field :deadline %>
    </div>
    <br>

  	<div>
  		<%= f.submit "Create Product" %>
  	</div>
<% end %>